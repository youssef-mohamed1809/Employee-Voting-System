    ViewData["Title"] = "Vote";
}

@Html.Partial("_EmployeeNavBar")

<div id="names"></div>

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Voting</h3>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="material-icons">&#xE8B6;</i></span>
                        <input type="text" id="search" class="form-control" placeholder="Search...">
                    </div>
                    <div class="mt-4">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Employee Name</th>
                                        <th scope="col">Vote</th>
                                    </tr>
                                </thead>
                                <tbody id="memberList">
                                    <!-- Placeholder for dynamically populated member list -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-4">Our Office</h4>
                <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>123 Street, New York, USA</p>
                <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@example.com</p>
                <div class="d-flex pt-3">
                    <a class="btn btn-square btn-light rounded-circle me-2" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="btn btn-square btn-light rounded-circle me-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="btn btn-square btn-light rounded-circle me-2" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a class="btn btn-square btn-light rounded-circle me-2" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var employees;
            var loggedInEmployeeName = "@ViewBag.name"; // Store the logged-in employee name

            $.ajax({
                type: "GET",
                url: "@Url.Action("getEmployees", "Employee")",
                success: function (response) {
                    employees = JSON.parse(response);
                    const memberList = document.getElementById('memberList');
                    var output = "";

                    // Filter out the logged-in employee from the list
                    employees = employees.filter(function (employee) {
                        return employee.Name !== loggedInEmployeeName;
                    });

                    for (var i = 0; i < employees.length; i++) {
                        output += "<tr>";
                        output += "<td>" + employees[i].Name + "</td>";
                        output += "<td><button class='btn btn-primary vote-btn' data-employee-id='" + employees[i].EmpId + "'>Vote</button></td>";
                        output += "</tr>";
                    }
                    memberList.innerHTML = output;
                    alert("Success");
                },
                error: function (response) {
                    alert("Error");
                }
            });

            $(document).on('click', '.vote-btn', function () {
                const employeeId = $(this).data('employee-id');
                // Perform your voting logic here, e.g., call an API endpoint to record the vote.
                // You can use AJAX to send the vote data to the server.
                // You can also show a success message or update the UI after the vote is recorded.
            });

            $("#search").on('input', function () {
                searchMembers();
            });

            function searchMembers() {
                const searchValue = document.getElementById('search').value.trim().toLowerCase();
                const memberList = document.getElementById('memberList');
                const rows = memberList.getElementsByTagName('tr');

                for (var i = 0; i < rows.length; i++) {
                    const nameColumn = rows[i].getElementsByTagName('td')[0];
                    const voteButton = rows[i].getElementsByTagName('button')[0];
                    const name = nameColumn.textContent.toLowerCase();

                    if (name.includes(searchValue)) {
                        rows[i].style.display = 'table-row';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
        });
    </script>
}
